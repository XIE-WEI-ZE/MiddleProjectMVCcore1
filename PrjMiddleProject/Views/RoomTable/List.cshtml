@model IEnumerable<PrjMiddleProject.Models.RoomTable>

@{
    ViewData["Title"] = "房間清單";
}

<h2 class="mb-4">房間清單</h2>

<form method="get" asp-action="List" class="mb-3">
    <div class="input-group w-50">
        <input type="text" name="txtKeyword" class="form-control" placeholder="輸入房號或房名查詢" />
        <button type="submit" class="btn btn-primary">查詢</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">新增房間</a>
</p>

<table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>房號</th>
            <th>房名</th>
            <th>房型</th>
            <th>床號</th>
            <th>圖片</th>
            <th>價格</th>
            <th>住民ID</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomNumber</td>
                <td>@item.RoomName</td>
                <td>@(item.RoomType == true ? "多人房" : "單人房")</td>
                <td>@item.BedCount</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content("~/images/beds/" + item.ImagePath)" alt="房間圖片" width="300" height="300" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">無圖片</span>
                    }
                </td>
                <td>@item.RoomPrice?.ToString("N0")</td>
                <td>@item.MemberId</td>
                <td>
                    <a asp-action="Edit" asp-route-roomNumber="@item.RoomNumber" class="btn btn-warning btn-sm me-2">編輯</a>
                    <button class="btn btn-info btn-sm me-2" onclick="showDetails('@item.RoomNumber')">詳細</button>
                    <a asp-action="Delete" asp-route-roomNumber="@item.RoomNumber" class="btn btn-danger btn-sm">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_RoomDetailsModal")
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>