@model IEnumerable<PrjMiddleProject.Models.Member>

@{
    ViewData["Title"] = "會員清單";
}

<h2 class="mb-4">會員清單</h2>

<!-- 輸出 AntiForgeryToken -->
<form id="antiForgeryForm">@Html.AntiForgeryToken()</form>

<!-- 搜尋區 -->
@using (Html.BeginForm("List", "Member", FormMethod.Get))
{
    <div class="row mb-3">
        <div class="col-auto">
            <label class="form-label">關鍵字：</label>
            <input type="text" name="txtKeyword" value="@ViewBag.txtKeyword" class="form-control" />
        </div>
        <div class="col-auto">
            <label class="form-label">入住狀態：</label>
            <select name="ResidesInCareHomeFilter" class="form-select">
                <option value="">-- 不篩選 --</option>
                @if (ViewBag.ResidesInCareHomeFilter == true)
                {
                    <option value="true" selected>已入住</option>
                }
                else
                {
                    <option value="true">已入住</option>
                }

                @if (ViewBag.ResidesInCareHomeFilter == false)
                {
                    <option value="false" selected>未入住</option>
                }
                else
                {
                    <option value="false">未入住</option>
                }
            </select>
        </div>

        <div class="col-auto">
            <label class="form-label">啟用狀態：</label>
            <select name="IsEnabledFilter" class="form-select">
                <option value="">-- 不篩選 --</option>
                @if (ViewBag.IsEnabledFilter == true)
                {
                    <option value="true" selected>啟用中</option>
                }
                else
                {
                    <option value="true">啟用中</option>
                }

                @if (ViewBag.IsEnabledFilter == false)
                {
                    <option value="false" selected>停權</option>
                }
                else
                {
                    <option value="false">停權</option>
                }
            </select>
        </div>

        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">查詢</button>
        </div>
    </div>
}

<!-- 新增會員按鈕 -->
<div class="mb-3 text-end">
    <a asp-controller="Member" asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> 新增會員
    </a>
</div>

<!-- 結果清單 -->
@if (!Model.Any())
{
    <div class="alert alert-warning">查無符合條件的會員資料</div>
}
else
{
    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>編號</th>
                <th>姓名</th>
                <th>身分證</th>
                <th>入住狀態</th>
                <th>性別</th>
                <th>生日</th>
                <th>啟用狀態</th>
                <th>操作功能</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                var isEnabled = m.Role != "Banned";
                <tr>
                    <td>@m.MemberId</td>
                    <td>@m.Name</td>
                    <td>
                        @{
                            string id = m.Idnumber ?? "";
                            string maskedId = id.Length >= 4 ? $"{id.Substring(0, 2)}*****{id[^2..]}" : "******";
                        }
                        @maskedId
                    </td>
                    <td>
                        @if (m.ResidesInCareHome == true)
                        {
                            <span class="badge bg-primary">已入住</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">未入住</span>
                        }
                    </td>
                    <td>@(m.Gender ?? "")</td>
                    <td>@(m.BirthDate?.ToString("yyyy/MM/dd") ?? "未填寫")</td>
                    <td class="status-cell">
                        @if (isEnabled)
                        {
                            <span class="badge bg-success">啟用中</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">停權</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@m.MemberId" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> 編輯
                        </a>

                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@m.MemberId" />
                            <button type="submit" class="btn btn-sm @(isEnabled ? "btn-danger" : "btn-secondary")"
                                    onclick="return confirm('@(isEnabled ? "確定要停權這位會員嗎？" : "確定要恢復該會員的權限嗎？")');">
                                <i class="bi @(isEnabled ? "bi-slash-circle-fill" : "bi-check-circle-fill")"></i>
                                @(isEnabled ? "停權" : "恢復權限")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="分頁導覽">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("List", new {
                        page = ViewBag.CurrentPage - 1,
                        txtKeyword = ViewBag.txtKeyword,
                        ResidesInCareHomeFilter = ViewBag.ResidesInCareHomeFilter,
                        IsEnabledFilter = ViewBag.IsEnabledFilter
                    })">上一頁</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("List", new {
                            page = i,
                            txtKeyword = ViewBag.txtKeyword,
                            ResidesInCareHomeFilter = ViewBag.ResidesInCareHomeFilter,
                            IsEnabledFilter = ViewBag.IsEnabledFilter
                        })">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("List", new {
                        page = ViewBag.CurrentPage + 1,
                        txtKeyword = ViewBag.txtKeyword,
                        ResidesInCareHomeFilter = ViewBag.ResidesInCareHomeFilter,
                        IsEnabledFilter = ViewBag.IsEnabledFilter
                    })">下一頁</a>
                </li>
            </ul>
        </nav>
    }
}
