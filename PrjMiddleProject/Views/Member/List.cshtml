@model PrjMiddleProject.ViewModels.CMemberKeywordViewModel

@{
    ViewData["Title"] = "會員清單";
}

<h2 class="mb-4">會員清單</h2>

<!--  輸出 AntiForgeryToken -->
<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<!--  搜尋區 -->
@using (Html.BeginForm("List", "Member", FormMethod.Get))
{
    <div class="mb-3 d-flex align-items-center">
        <label class="me-2">搜尋關鍵字：</label>
        <input type="text" name="txtKeyword" value="@Model.txtKeyword" class="form-control w-auto" />
        <button type="submit" class="btn btn-primary btn-sm ms-2">查詢</button>
    </div>
}

<!--  新增會員按鈕 -->
<div class="mb-3 text-end">
    <a asp-controller="Member" asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> 新增會員
    </a>
</div>

<!--  結果 -->
@if (!Model.Members.Any())
{
    <div class="alert alert-warning">查無符合條件的會員資料</div>
}
else
{
    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>編號</th>
                <th>姓名</th>
                <th>身分證</th>
                <th>入住狀態</th>
                <th>性別</th>
                <th>生日</th>
                <th>啟用狀態</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Members)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>
                        @{
                            string id = m.IDNumber ?? "";
                            string maskedId = id.Length >= 4 ? $"{id.Substring(0, 2)}*****{id.Substring(id.Length - 2)}" : "******";
                        }
                        @maskedId
                    </td>
                    <td>
                        @if (m.ResidesInCareHome == true)
                        {
                            <span class="badge bg-primary">已入住</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">未入住</span>
                        }
                    </td>
                    <td>@m.Gender</td>
                    <td>@(m.Birthday?.ToString("yyyy/MM/dd") ?? "未填寫")</td>
                    <td class="status-cell">
                        @if (m.IsEnabled)
                        {
                            <span class="badge bg-success">啟用中</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">停權</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> 編輯
                        </a>
                        <button type="button"
                                class="btn btn-sm toggle-status-btn @(m.IsEnabled ? "btn-danger" : "btn-secondary")"
                                data-id="@m.Id"
                                data-current="@m.IsEnabled">
                            <i class="bi @(m.IsEnabled ? "bi-slash-circle-fill" : "bi-check-circle-fill")"></i>
                            @(m.IsEnabled ? "停權" : "恢復權限")
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="分頁導覽">
            <ul class="pagination justify-content-center">

                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("List", new { page = Model.CurrentPage - 1, txtKeyword = Model.txtKeyword })">上一頁</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("List", new { page = i, txtKeyword = Model.txtKeyword })">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("List", new { page = Model.CurrentPage + 1, txtKeyword = Model.txtKeyword })">下一頁</a>
                </li>
            </ul>
        </nav>
    }

}


@section Scripts {
    <script>
        document.querySelectorAll('.toggle-status-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const memberId = btn.dataset.id;
                const isEnabled = btn.dataset.current === "True";

                const confirmMsg = isEnabled ? "確定要停權這位會員嗎？" : "確定要恢復該會員的權限嗎？";
                if (!confirm(confirmMsg)) return;

                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const response = await fetch('/Member/ToggleStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(memberId)
                });

                const result = await response.json();

                if (result.success) {
                    const row = btn.closest('tr');
                    const statusCell = row.querySelector('.status-cell');

                    // 更新資料狀態
                    btn.dataset.current = result.isEnabled;
                    row.dataset.status = result.isEnabled;

                    // 更新按鈕樣式與文字
                    btn.className = "btn btn-sm toggle-status-btn " + (result.isEnabled ? "btn-danger" : "btn-secondary");
                    btn.innerHTML = `<i class="bi ${result.isEnabled ? "bi-slash-circle-fill" : "bi-check-circle-fill"}"></i> ${result.isEnabled ? "停權" : "恢復權限"}`;

                    // 更新狀態欄顯示
                    statusCell.innerHTML = result.isEnabled
                        ? '<span class="badge bg-success">啟用中</span>'
                        : '<span class="badge bg-danger">停權</span>';

                    // 顯示訊息
                    const msg = document.getElementById("resultMsg");
                    msg.textContent = result.message;
                    msg.classList.remove("d-none");
                    setTimeout(() => msg.classList.add("d-none"), 3000);
                }
            });
        });
    </script>
}
