@model PrjMiddleProject.ViewModels.CMemberViewModel

@{
    ViewData["Title"] = "新增會員";
}

<h2 class="mb-4">新增會員</h2>

<!-- 顯示驗證錯誤 -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">姓名</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label">帳號</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">密碼</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">確認密碼</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IDNumber" class="form-label">身分證字號</label>
        <input asp-for="IDNumber" class="form-control" />
        <span asp-validation-for="IDNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label">性別</label>
        <select asp-for="Gender" class="form-select">
            <option value="">請選擇</option>
            <option value="男">男</option>
            <option value="女">女</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Birthday" class="form-label">生日</label>
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ResidesInCareHome" class="form-label d-block">入住狀態</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="ResidesInCareHome" value="true" />
            <label class="form-check-label" for="ResidesInCareHome">已入住</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="ResidesInCareHome" value="false" checked />
            <label class="form-check-label" for="ResidesInCareHome">未入住</label>
        </div>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsEnabled" class="form-check-input" />
        <label asp-for="IsEnabled" class="form-check-label">啟用帳號</label>
    </div>

    <button type="submit" class="btn btn-primary">儲存</button>
    <a asp-action="List" class="btn btn-secondary">返回清單</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
