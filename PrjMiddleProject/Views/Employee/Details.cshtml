@model PrjMiddleProject.ViewModel.CEmployeeDetailsViewModel

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0 text-center fw-bold fs-1 text-white">員工詳細資料</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle fs-6">
                <tbody>
                    <tr>
                        <th><i class="bi bi-hash me-1"></i> 員工編號</th>
                        <td>@Model.EmployeeId</td>
                        <th><i class="bi bi-person-fill me-1"></i> 姓名</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-shield-lock-fill me-1"></i> 管理者</th>
                        <td>@(Model.IsAdmin == true ? "是" : "否")</td>
                        <th><i class="bi bi-award-fill me-1"></i> 主管</th>
                        <td>@(Model.IsSupervisor == true ? "是" : "否")</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-person-lines-fill me-1"></i> 員工編碼</th>
                        <td>@Model.EmployeeIDNumber</td>
                        <th><i class="bi bi-person-badge-fill me-1"></i> 在職狀態</th>
                        <td>@Model.EmploymentStatus</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-building me-1"></i> 部門</th>
                        <td>@Model.DepartmentName</td>
                        <th><i class="bi bi-briefcase-fill me-1"></i> 職稱</th>
                        <td>@Model.JobTitleName</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-gender-ambiguous me-1"></i> 性別</th>
                        <td>@Model.Gender</td>
                        <th><i class="bi bi-cake me-1"></i> 出生日期</th>
                        <td>@Model.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-calendar-check-fill me-1"></i> 雇用日期</th>
                        <td>@Model.DateOfHire?.ToString("yyyy-MM-dd")</td>
                        <th><i class="bi bi-hourglass-split me-1"></i> 年資</th>
                        <td>@Model.YearsOfService</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-phone-fill me-1"></i> 手機</th>
                        <td>@Model.MobileNumber</td>
                        <th><i class="bi bi-envelope-fill me-1"></i> 電子郵件</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-house-door-fill me-1"></i> 戶籍地址</th>
                        <td>@Model.RegisteredAddress</td>
                        <th><i class="bi bi-geo-alt-fill me-1"></i> 通訊地址</th>
                        <td>@Model.CurrentAddress</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-mortarboard-fill me-1"></i> 教育程度</th>
                        <td>@Model.EducationLevel</td>
                        <th><i class="bi bi-shield-check me-1"></i> 良民證</th>
                        <td>@(Model.PoliceClearanceCertificate == true ? "是" : "否")</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-rulers me-1"></i> 身高</th>
                        <td>@Model.Height?.ToString("0.00") cm</td>
                        <th><i class="bi bi-scales me-1"></i> 體重</th>
                        <td>@Model.Weight?.ToString("0.00") kg</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-person-heart me-1"></i> 緊急聯絡人</th>
                        <td>@Model.EmergencyContactPerson</td>
                        <th><i class="bi bi-people-fill me-1"></i> 關係</th>
                        <td>@Model.EmergencyContactRelationship</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-telephone-fill me-1"></i> 聯絡電話</th>
                        <td>@Model.EmergencyContactPhone</td>
                        <th><i class="bi bi-bank me-1"></i> 薪資帳戶</th>
                        <td>@Model.PayrollBankAccount</td>
                    </tr>
                    <tr>
                        <td colspan="4" class="text-center pt-4">
                            <strong><i class="bi bi-image me-1"></i> 員工照片：</strong><br />
                            @if (!string.IsNullOrEmpty(Model.Photopath))
                            {
                                <img src="@Url.Content(Model.Photopath)" alt="員工照片"
                                     class="img-thumbnail mt-2"
                                     style="height:160px; width:auto;" />
                            }
                            else
                            {
                                <span class="text-muted">未上傳</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-end mt-4">
    <a asp-action="List" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> 返回列表
    </a>
</div>
